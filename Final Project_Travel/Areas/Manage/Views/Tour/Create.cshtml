﻿
@model Tour

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Tour Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Code">Code</label>
                        <input asp-for="Code" class="form-control">
                        <span class="text-danger" asp-validation-for="Code"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Desc">Desc</label>
                        <input asp-for="Desc" class="form-control">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CategoryId">Category</label>
                        <select class="form-control" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DestinationId">Destination</label>
                        <select class="form-control" asp-for="DestinationId" asp-items="new SelectList(ViewBag.Destinations,nameof(Destination.Id),nameof(Destination.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DepartureLocationId">DepartureLocation</label>
                        <select class="form-control" asp-for="DepartureLocationId" asp-items="new SelectList(ViewBag.DepartureLocations,nameof(DepartureLocation.Id),nameof(DepartureLocation.Name))">
                        </select>
                    </div>
                   
                    <div class="form-group col-md-4">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DiscountPrice">DiscountPrice</label>
                        <input asp-for="DiscountPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="PersonCount">PersonCount</label>
                        <input asp-for="PersonCount" class="form-control">
                        <span class="text-danger" asp-validation-for="PersonCount"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="StartDate">StartDate</label>
                        <input asp-for="StartDate" class="form-control">
                        <span class="text-danger" asp-validation-for="StartDate"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="EndDate">EndDate</label>
                        <input asp-for="EndDate" class="form-control">
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Rate">Rate</label>
                        <input asp-for="Rate" class="form-control">
                        <span class="text-danger" asp-validation-for="Rate"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Transfer">Transfer</label>
                        <input asp-for="Transfer" class="form-control">
                        <span class="text-danger" asp-validation-for="Transfer"></span>
                    </div>
                   
                    <div class="form-group col-md-4">
                        <label asp-for="Insurance">Insurance</label>
                        <input asp-for="Insurance" class="form-control">
                        <span class="text-danger" asp-validation-for="Insurance"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input asp-for="PosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                    </div>
                   
                    <div class="form-group col-md-12">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input asp-for="ImageFiles" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>