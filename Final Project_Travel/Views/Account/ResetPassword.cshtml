@using Final_Project_Travel.ViewModels;
@model ResetPasswordViewModel


<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-10 col-xs-12">
				<form method="post">
					<div class="login-form">
						<h4 class="login-title">Returning Customer</h4>
						<p><span class="font-weight-bold">I am a returning customer</span></p>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Password">Enter your Password here...</label>
								<input class="mb-0 form-control" asp-for="Password">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="ConfirmPassword">Enter your Password here again...</label>
								<input class="mb-0 form-control" asp-for="ConfirmPassword">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
							<input type="hidden" name="Email" value="@TempData["Email"]" />
							<input type="hidden" name="Token" value="@TempData["Token"]" />

							<div class="col-md-12 col-12 mb--15">
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								</div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">Reset Password</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>