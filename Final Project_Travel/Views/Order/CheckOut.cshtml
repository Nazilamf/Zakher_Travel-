@using Final_Project_Travel.ViewModels;

 @model CheckOutViewModel
@{
    ViewData["TourId"] = Model.Item.Tour.Id;
    ViewData["TourName"] = Model.Item.Tour.Name;
    ViewData["TotalAmount"] = Model.Item.Tour.DiscountPrice;
    ViewData["Email"] = Model.Order.Email;
}

<!-- Hero header -->
<div class="container-fluid bg-primary py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-center py-5">
            <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                <h1 class="display-3 text-white animated slideInDown">CheckOut</h1>
            </div>
        </div>
    </div>
</div>

<!-- Hero header end -->
<!-- Main section start -->
<!-- Billing Details start -->

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="title">Billing Details</h1>
            <div class="card mb-5">
                @Html.Partial("_OrderCreateFormPartial", Model.Order)
                
            </div>
        </div>

        <!-- Billing Details end -->
        <!-- Cart Calculation Area start -->
        <div class="col-lg-6 ">

            <form id="orderform" asp-action="create" asp-controller="order" >
                <input name="TourId" type="hidden" value="@Model.Item.Tour.Id"/>
                <input name="TourName" type="hidden" value="@Model.Item.Tour.Name" />
                <input name="TotalAmount" type="hidden" value="@Model.Item.Tour.DiscountPrice" />
                <input name="Email" type="hidden" value="@Model.Order.Email" />
            <div class="cart-calculator-wrapper mt-5">
                <div class="cart-calculate-items">
                    <h3>Cart Totals</h3>
                    <div class="table-responsive">
                        <table class="table">

                            <tr class="total">
                                <td>@Model.Item.TourName</td>
                                <td>Total</td>
                                <td class="total-amount">@Model.TotalAmount</td>
                            </tr>
                        </table>
                    </div>
                </div>
                  <div class="buttons">
                    <button type="submit" form="orderform" class="login-button">Proceed To Order</button>
                </div>
            </div>

            </form>
        </div>

        <!-- Cart Calculation Area end-->
    </div>

</div>

<!-- main section end -->
